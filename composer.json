{
    "name": "calcinai/xero-php",
    "type": "library",
    "description": "A client implementation of the Xero API, with a cleaner OAuth interface and ORM-like abstraction.",
    "homepage": "https://github.com/calcinai/xero-php",
    "license": "MIT",
    "require": {
        "php": ">=5.6.0",
        "calcinai/oauth2-xero": "^1.0",
        "ext-json": "*",
        "ext-simplexml": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^5"
    },
    "autoload": {
        "psr-4": {
            "XeroPHP\\": "src/XeroPHP/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "XeroPHP\\Tests\\": "tests/"
        }
    }
}